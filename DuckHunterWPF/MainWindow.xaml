<Window x:Class="DuckHunterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuckHunterWPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Duck Hunter" Height="548" Width="526" 
        Background="CornflowerBlue">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#373737" />
            <Setter Property="Background" Value="White" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="SnapsToDevicePixels" Value="True" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}">
                            <Grid>
                                <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#373737" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Gray" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Agency FB"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>



        </Style>

    </Window.Resources>

    <Canvas Name="MainCanvas" Focusable="True">

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="98">
            <Button Click="uiButtonSaves_Click"  x:Name="uiButtonSaves" Margin="10,10,-10,-10">Save</Button>
            <Button Click="uiButtonLoad_Click"  x:Name="uiButtonLoad" Margin="10,36,-10,-36">Load</Button>
            <Button Click="uiButtonNewGame_Click"  x:Name="uiButtonNewGame" Margin="10,62,-10,-61">New Game</Button>

        </Grid>

        <Grid x:Name="Score" Canvas.Left="22" Canvas.Top="102" Panel.ZIndex="98">
            <TextBlock Text="SCORE " Margin="363,360,-363,-362"></TextBlock>
            <TextBlock x:Name="Points" Text="{Binding points, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="363,344,-363,-345"></TextBlock>
            <TextBlock x:Name="Round" Foreground="#8ed612" Text="{Binding round, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="59,312,-59,-313"></TextBlock>
            <TextBlock x:Name="bullets" Text="{Binding bullets, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="32,344,-31,-344"></TextBlock>
        </Grid>

        <Grid x:Name="Crosshair" Canvas.Left="255" Canvas.Top="260" Panel.ZIndex="97" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Rectangle Height="24" RadiusX="12" RadiusY="12" VerticalAlignment="Center" StrokeThickness="2" Stroke="Black"/>
            <Rectangle  Width="24" Height="1" Fill="Black" ></Rectangle>
            <Rectangle  Width="1" Height="24" Fill="Black" ></Rectangle>
        </Grid>


        <Grid Panel.ZIndex="99">
            <TextBlock Text="Radio" Margin="338,7,-340,-7"></TextBlock>
            <Button Content = "Play" Margin = "377,4,-368,-4" Padding = "5" Click = "mediaPlay" />
            <Button Content = "Pause" Margin = "439,4,-431,-4" Padding = "5" Click = "mediaPause" />

        </Grid>

        <Grid>
            <TextBlock Background="Black" Text="{Binding timer, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="209,64,0,-64" HorizontalAlignment="Left"></TextBlock>
        </Grid>
    </Canvas>



</Window>


